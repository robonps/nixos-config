{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-width": 420,
  "control-center-margin-top": 12,
  "control-center-margin-bottom": 12,
  "control-center-margin-right": 12,
  "control-center-margin-left": 12,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-window-width": 400,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "notifications",
    "mpris",
    "volume",
    "backlight",
    "buttons-grid"
  ],
  "widget-config": {
    "title": {
      "text": "Control Center",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "mpris": {
      "image-size": 90,
      "image-radius": 12
    },
    "volume": {
      "label": "󰕾"
    },
    "backlight": {
      "label": "󰃟"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "󰝟",
          "type": "toggle",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
          "update-command": "wpctl get-volume @DEFAULT_AUDIO_SINK@ | grep -q '\\[MUTED\\]' && echo true || echo false"
        },
        {
          "label": "󰍭",
          "type": "toggle",
          "command": "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle",
          "update-command": "wpctl get-volume @DEFAULT_AUDIO_SOURCE@ | grep -q '\\[MUTED\\]' && echo true || echo false"
        },
        {
          "label": "󰖩",
          "type": "toggle",
          "command": "sh -c 'nmcli radio wifi | grep -q enabled && nmcli radio wifi off || nmcli radio wifi on'",
          "update-command": "sh -c 'nmcli radio wifi | grep -q enabled && echo false || echo true'"
        },
        {
          "label": "󰂯",
          "type": "toggle",
          "command": "sh -c 'bluetoothctl show | grep Powered | grep -q yes && bluetoothctl power off || bluetoothctl power on'",
            "update-command": "sh -c 'bluetoothctl show | grep Powered | grep -q yes && echo true || echo false'"
        },
        {
          "label": "󰤄",
          "command": "swaync-client -d",
          "update-command": "swaync-client -D",
          "type": "toggle"
        },
        {
          "label": "󰀟",
          "command": "gnome-network-displays"
        },
        {
          "label": "",
          "command": "hyprlock"
        },
        {
          "label": "",
          "command": "wlogout"
        }
      ]
    }
  }
}